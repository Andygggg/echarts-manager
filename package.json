{
  "name": "@andy/echarts-manager",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.2",
  "description": "A lightweight ECharts manager for managing multiple chart instances with ease.",
  "author": "Andy Wu",
  "private": false,
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.es.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview",
    "publishing": "yarn publish"
  },
  "type": "module",
  "keywords": [
    "echarts",
    "charts",
    "typescript",
    "data-visualization",
    "chart-manager"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "optionalDependencies": {
    "echarts": "^5.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "echarts": "^5.6.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3"
  }
}
